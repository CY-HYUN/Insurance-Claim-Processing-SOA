        {
          "name": "Get Policy by ID",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"query { policy(policyId: \\\"POL-001\\\") { policyId userId policyType status coverageAmount premium isActive } }\"\n}"
            },
            "url": {
