              "mode": "raw",
              "raw": "{\n  \"query\": \"query ValidatePolicy($policyId: String!, $claimAmount: Float!) { validatePolicy(policyId: $policyId, claimAmount: $claimAmount) { policyId isValid status message validationErrors coverageLimit } }\",\n  \"variables\": {\n    \"policyId\": \"POL-001\",\n    \"claimAmount\": 30000.0\n  }\n}"
